apiVersion: batch/v2alpha1
kind: {{ 'ScheduledJob' if osbs_openshift_version == '3.4' else 'CronJob' }}
metadata:
  name: build-pruner
spec:
  schedule: "{{ osbs_prune_schedule }}"
  jobTemplate:
    spec:
      template:
        spec:
          serviceAccountName: "{{ osbs_prune_serviceaccount }}"
          containers:
          - name: build-pruner
            image: "{{ osbs_prune_image }}"

            {% if osbs_prune_commands %}command: {{ osbs_prune_commands | to_yaml }}{% endif %}

          restartPolicy: Never
